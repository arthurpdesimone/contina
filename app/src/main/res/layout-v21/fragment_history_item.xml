<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_health"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/fragment_history_item_undo_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingStart="12dp"
        android:tint="@color/textColorSecondary"
        android:src="@drawable/ic_delete_white_24dp"/>

<LinearLayout android:id="@+id/fragment_history_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_divider"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_history_item_date_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorSecondary"
                android:textSize="28sp"
                android:fontFamily="sans-serif-light"
                android:text="01"/>

            <TextView
                android:id="@+id/fragment_history_item_date_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorSecondary"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:text="jan"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fragment_history_item_undo_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tint="@color/textColorSecondary"
                android:src="@drawable/ic_undo_variant_grey600_36dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_history_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/fragment_history_item_click_expand_collapse"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:background="@color/background_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<ImageView
                    android:id="@+id/fragment_history_item_drop_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:foregroundGravity="center"
                    android:clickable="true"
                    android:layout_marginRight="6dp"
                    android:padding="4dp"
                    android:background="@drawable/bg_ripple"
                    android:tint="@color/textColorSecondary"
                    android:src="@drawable/ic_keyboard_arrow_right"/>-->

                <ImageView
                    android:id="@+id/fragment_history_item_category_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_margin="16dp"
                    android:padding="12dp"
                    android:background="@drawable/bg_round_category"
                    android:src="@drawable/ic_edit"/>

                <TextView
                    android:id="@+id/fragment_history_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="72dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/textColorPrimary"
                    android:text="Milk"/>

                <ImageView
                    android:id="@+id/fragment_history_item_category_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="12dp"
                    android:minWidth="12dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:padding="4dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/bg_round_category"/>

                <TextView
                    android:id="@+id/fragment_history_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_below="@id/fragment_history_item_name"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:text="$ 2,70"/>

                <LinearLayout
                    android:id="@+id/fragment_history_item_ll2"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_below="@id/fragment_history_item_ll"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fragment_history_item_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/textColorSecondary"
                        android:fontFamily="sans-serif-light"
                        android:text="21/07/2016"/>

                    <TextView
                        android:id="@+id/fragment_history_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/textColorSecondary"
                        android:fontFamily="sans-serif-light"
                        android:text="10:30"/>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/fragment_history_item_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_month"/>

            <RelativeLayout
                android:id="@+id/fragment_history_item_category_visible"
                android:visibility="gone"
                android:background="@color/background_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/fragment_history_item_expand_collapse"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/fragment_history_item_category_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:gravity="center"
                            android:background="@drawable/bg_chip_category"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/bg_round_category"
                                android:tint="@color/textColorPrimary"
                                android:padding="6dp"
                                android:src="@drawable/ic_gamepad_variant_white_24dp"/>

                            <TextView
                                android:id="@+id/fragment_history_item_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="14sp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="12dp"
                                android:fontFamily="sans-serif"
                                android:text="@string/fragment_dialog_categories_health"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/fragment_history_item_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:src="@drawable/ic_delete_white_24dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/bg_round"
                            android:clickable="true"
                            android:padding="8dp"
                            android:layout_margin="8dp"
                            android:tint="@color/textColorSecondary"/>

                        <ImageView
                            android:id="@+id/fragment_history_item_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:padding="8dp"
                            android:layout_marginEnd="56dp"
                            android:clickable="true"
                            android:background="@drawable/bg_round"
                            android:tint="@color/textColorSecondary"
                            android:src="@drawable/ic_mode_edit_white_24dp"/>

                    </RelativeLayout>

                    <!-- <View
                        android:id="@+id/fragment_history_item_divider_category"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                       android:background="@color/background_divider"/>-->


                    <RelativeLayout
                        android:id="@+id/fragment_history_item_rl1"
                        android:paddingBottom="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/fragment_history_item_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginEnd="72dp"
                            android:layout_marginStart="16dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/textColorSecondary"
                            android:text="Rosário"/>

                        <TextView
                            android:id="@+id/fragment_history_item_time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="16dp"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/textColorSecondary"
                            android:fontFamily="sans-serif-light"
                            android:text="10:30"/>

                        <!--<ImageView
                                 android:id="@+id/fragment_history_item_payment_img"
                                 android:layout_width="24dp"
                                 android:layout_height="24dp"
                                 android:layout_marginRight="8dp"
                                 android:layout_alignParentRight="true"
                                 android:src="@drawable/ic_credit_card"/>

                            <TextView
                                 android:id="@+id/fragment_history_item_payment"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_below="@id/fragment_history_item_place"
                                 android:layout_gravity="bottom"
                                 android:layout_marginLeft="16dp"
                                 android:textColor="@color/md_green_500"
                                 android:textSize="16sp"
                                 android:fontFamily="sans-serif"
                                 android:text="@string/fragment_history_item_payment_cash"/> -->


                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</RelativeLayout>