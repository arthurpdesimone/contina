<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.drawer.WearableDrawerLayout
    android:id="@+id/activity_new_item_drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:deviceIds="wear"
    android:background="@color/lighter_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.wearable.view.BoxInsetLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_box="left|right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_new_item_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Health"
                        android:textColor="@color/accent"
                        android:textSize="14sp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_blue_lighter_element"/>

                    <LinearLayout
                        android:id="@+id/activity_new_item_price_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/activity_new_item_price_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_round"
                            android:src="@drawable/ic_attach_money_white_18dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/activity_new_item_currency_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="BRL"
                                android:alpha="0.6"
                                android:text=""
                                android:textColorHint="@color/white"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/activity_new_item_price_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="00,00"
                                android:text=""
                                android:textColorHint="@color/white"
                                android:textColor="@color/white"
                                android:textSize="22sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        android:alpha="0.1"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/activity_new_item_date_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-condensed"
                            android:text="DATE AND TIME"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/activity_new_item_date_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:paddingRight="10dp"
                            android:background="@drawable/ripple"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/activity_new_item_date_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/bg_round"
                                android:padding="12dp"
                                android:src="@drawable/ic_today_white_18dp" />

                            <TextView
                                android:id="@+id/activity_new_item_date_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:fontFamily="sans-serif-condensed-light"
                                android:text="23 Jan"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/activity_new_item_time_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:background="@drawable/ripple"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/activity_new_item_time_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:padding="12dp"
                                android:background="@drawable/bg_round"
                                android:src="@drawable/ic_access_time_white_18dp" />

                            <TextView
                                android:id="@+id/activity_new_item_time_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif-condensed-light"
                                android:text="18:30"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.wearable.view.BoxInsetLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#33000000"
                android:gravity="center">

                <android.support.wearable.view.CircledImageView
                    android:id="@+id/activity_new_item_cancel_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_white_24dp"
                    android:layout_margin="15dp"
                    app:circle_border_width="2dp"
                    android:alpha="0.8"
                    app:circle_border_color="@color/white"
                    app:circle_radius="24dp" />

                <android.support.wearable.view.CircledImageView
                    android:id="@+id/activity_new_item_save_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_white_24dp"
                    android:layout_margin="15dp"
                    app:circle_color="@color/active_ui_element"
                    app:circle_border_width="0dp"
                    app:circle_radius="24dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.wearable.view.drawer.WearableDrawerLayout>